<!--miniprogram/pages/page_user_face/page_user_face.wxml-->
<van-nav-bar title="刷脸登记" left-text="返回" left-arrow bind:click-left="onClickLeft" />
<view class="page-body">
  <view class="page-body-wrapper">
    <camera device-position="front" flash="off" binderror="error" style="width: 80%; height: 300px;"></camera>
    <view class="btn-area">
      <button type="primary" bindtap="takePhotoRegister">登记</button>
    </view>
    <view class="btn-area">
      <van-cell-group>
        <van-field disable clearable label="学号" type="digit" bind:change="onChangeStuId" value="{{inputStuId}}"/>
      </van-cell-group>
      <button type="primary" bindtap="takePhotoRecognize">识别</button>
    </view>
  </view>
</view>
