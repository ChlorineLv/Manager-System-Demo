<!--index.wxml-->
<view class="container">

<van-cell-group>
  <van-field
    value="{{ userinfo }}"
    required
    clearable
    label="用户名"
    icon="question-o"
    placeholder="请输入用户名"
    bind:change="onInfoChange"
    bind:click-icon="onClickIcon"
  />

  <van-field
    value="{{ userpwd }}"
    type="password"
    label="密码"
    placeholder="请输入密码"
    bind:change="onPwdChange"
    required
    border="{{ false }}"
  />
</van-cell-group>

<van-row>
<van-button bind:click="onClickSign" type="primary">登陆</van-button>
<van-button type="default">取消</van-button></van-row>
</view>
